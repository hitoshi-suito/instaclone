<h2>詳細画面</h2>
<p>タイトル：<%= @picture.title %></p>
<p>内容：<%= @picture.content %></p>
<p>画像：<%= image_tag @picture.image.url %></p>

<% if @picture.user_id != current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入りを解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りに追加する', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>


<%= link_to '戻る', pictures_path %>
