<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.user.name %></td>
      <td><%= picture.title %></td>
      <td><%= picture.content %></td>
      <td><%= link_to '詳細確認', picture_path(picture.id) %></td>
        <% if picture.user_id == current_user.id %>
          <td><%= link_to '編集する', edit_picture_path(picture.id), data: {confirm: '編集しますか？'} %></td>
          <td><%= link_to '削除する', picture_path(picture.id), method: :delete, data: {confirm: '削除しますか？'} %></td>
        <% end %>
    </tr>
<% end %>
</table>
  <%= link_to '新規投稿', new_picture_path %>
