<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>

    <td><%= picture.title %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細確認', picture_path(picture.id) %></td>
    <td><%= link_to '編集する', edit_picture_path(picture.id), data: {confirm: '編集しますか？'} %></td>
    <td><%= link_to '削除する', picture_path(picture.id), method: :delete, data: {confirm: '削除しますか？'} %>
  </tr>
<% end %>
</table>
  <%= link_to '新規投稿', new_picture_path %>
